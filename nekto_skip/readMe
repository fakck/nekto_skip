Если вы пользуетесь 2Captcha и у вас присутствует там балланс, то можете вставить код ниже

solver = TwoCaptcha('Ваш API ключ')

def captcha():
    try:
        time.sleep(1.5)
        sitekey = driver.find_element(By.CSS_SELECTOR, 'iframe[src*="recaptcha"]').get_attribute('data-sitekey')

        result = solver.recaptcha(sitekey=sitekey, url=driver.current_url)

        driver.execute_script(f'document.getElementById("g-recaptcha-response").innerHTML="{result["code"]}";')

        submit_button = driver.find_element(By.ID, 'submit-button')
        submit_button.click()
    except Exception as e:
        print(f"Ошибка при решении капчи: {e}")